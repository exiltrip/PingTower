{
  "files": [],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "paths": {
      "@/": [
        ""
      ]
    },
    // Fixes the main issues with enums and type imports/exports
    "verbatimModuleSyntax": false,
    // Allows building despite unused variables, for a quick fix
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}

